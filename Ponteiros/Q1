package main

import "fmt"

func atualizarValor(ponteiro *int, n int) {
	soma := 0
	for i := 1; i <= n; i++ {
		soma += i
	}
	*ponteiro = soma
}

func main() {
	var valor int = 0
	var n int = 5

	fmt.Println("Valor antes da atualização:", valor)
	atualizarValor(&valor, n)
	fmt.Println("Valor após a atualização:", valor)
}
    soma := 0
    for i := 1; i <= n; i++ {
        soma += i
    }
    *ponteiro = soma
}
